# Pydantic Agent Configuration
# Copy this file to .env and customize as needed

# Model Backend Configuration
AGENT_MODEL_BACKEND__BASE_URL=http://localhost:11434/v1
AGENT_MODEL_BACKEND__MODEL=llama3.2
# AGENT_MODEL_BACKEND__API_KEY=your-api-key-here
AGENT_MODEL_BACKEND__TIMEOUT=30.0
AGENT_MODEL_BACKEND__MAX_RETRIES=3

# Logging Configuration
AGENT_LOGGING__LEVEL=INFO
AGENT_LOGGING__STRUCTURED=false

# Retry Configuration
AGENT_RETRY__RETRY_LEVEL=2
AGENT_RETRY__INITIAL_BACKOFF_SECONDS=1.0
AGENT_RETRY__MAX_BACKOFF_SECONDS=60.0

# Token Tracking Configuration
AGENT_TOKEN_TRACKING__ENCODING=cl100k_base

# Context Management Configuration
AGENT_CONTEXT__STRATEGY=sliding_window
AGENT_CONTEXT__TRIGGER_THRESHOLD_TOKENS=100000
AGENT_CONTEXT__TARGET_TOKENS=80000
AGENT_CONTEXT__PRESERVE_RECENT_TURNS=10

# Streaming Configuration
AGENT_STREAMING__STREAM_MODEL_RESPONSES=true
AGENT_STREAMING__STREAM_TOOL_RESULTS=true
